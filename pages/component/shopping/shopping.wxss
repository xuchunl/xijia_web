.shopping-all {
  height: 100%;
  width: 100%;
}
.shopping-main {
  height: 80%;
  overflow: auto;
}
.shopping-info-head {
  height: 80rpx;
  width: 100%;
  margin-top: 15rpx;
}
.shopping-info-image {
  height: 70rpx !important;
  width: 80rpx;
  padding-top: 5rpx;
  padding-left: 15rpx;
  padding-right: 5rpx;
}
.shopping-info-shop,
.shopping-info-discount {
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-right: 20rpx;
}
.shopping-info-body {
  margin-top: 10rpx;
  height: 200rpx;
}
.shopping-info-body-icon{
  font-size: 150%;
  padding-top: 10%;
  width: 10%;
  text-align: center;
}
.shopping-info-body .check,
.shopping-bottom .check {
  color: #409EFF;
}
.shopping-info-body .uncheck,
.shopping-bottom .uncheck {
  color: #DCDFE6;
}
.shopping-info-body-image {
  height: 50%;
  width: 8%;
  padding-top: 10%;
  text-align: center;
}
.shopping-info-body-image image {
  height: 60rpx;
  width: 100%;
}
.shopping-info-body-name {
  font-size: 30rpx;
  padding-top: 5rpx;
  padding-left: 20rpx;
  height: 55%;
  width: 74%;
  line-height: 70rpx;
}
.shopping-info-body-add {
  font-size: 30rpx;
  height: 40%;
  width: 74%;
  padding-left: 20rpx;
}
.shopping-info-body-num {
  height: 90%;
}
.shopping-info-body-money {
  height: 50%;
  position: relative;
  bottom: -20rpx;
}
.shopping-info-body .minimize,
.shopping-info-body .addNum{
  height: 100%;
  font-size: 50rpx;
  border: 1rpx solid #DCDFE6;
  width: 80rpx;
  text-align: center;
  background: #F1F1F1;
}
.shopping-info-body .num-input{
  border-top: 1rpx solid #DCDFE6;
  border-bottom: 1rpx solid #DCDFE6;
  width: 80rpx;
  text-align: center;
  background: #FFFFFF;
  height: 100%;
}
.shopping-bottom {
  position: fixed;
  bottom: 0rpx;
  height: 13%;
  width: 100%;
  z-index: 9999;
}
.shopping-bottom-icon {
  font-size: 150%;
  height: 100%;
  padding-top: 8%;
  width: 10%;
  text-align: center;
}
.shopping-bottom-allCheck {
  font-size: 80%;
  height: 100%;
  padding-top: 9%;
}
.shopping-bottom-sum {
  width: 50%;
  height: 100%;
}
.shopping-bottom-sum-money {
  height: 35%;
  padding: 15rpx;
}
.shopping-bottom-count {
  font-size: 100%;
}
.shopping-bottom-real-money {
  font-size: 100%;
}
.shopping-bottom-total {
  padding-left: 15rpx;
  font-size: 80%;
  height: 40%;
}
.shopping-bottom-total-money {
  padding-right: 8rpx;
}
.shopping-bottom-settle {
  width: 30%;
  height: 100%;
  text-align: center;
  padding-top: 8%;
  font-size: 100%;
}




