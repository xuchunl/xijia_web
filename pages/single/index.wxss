.single .body .pin-tun-info .label {
  width: calc(100% - 260rpx);
  padding-left: 10rpx;
}
.step.is-horizontal .step-last-line{
  height: 0rpx;
  top: 9rpx;
  left: 0;
  right: 0;
  width: 100%;
}
.step-line {
  position: absolute;
  border-color: inherit;
  background-color: #c0c4cc;
  width: 100%;
}
.step-line-inner {
  display: block;
  border-style: solid;
  border-color: inherit;
  transition: .15s ease-out;
  box-sizing: border-box;
  height: 0;
  width: 100%;
}
.step-icon.is-text {
    border-radius: 50%;
}
.step-icon {
  position: relative;
  z-index: 1;
  justify-content: center;
  align-items: center;
  width: 25rpx;
  height: 25rpx;
  font-size: 100%;
  box-sizing: border-box;
  transition: .15s ease-out;
}
.step-icon-inner {
  display: inline-block;
  user-select: none;
  text-align: center;
  font-weight: 700;
  line-height: 1;
  color: inherit;
}
.step-main {
  height: 45rpx;
  line-height: 45rpx;
  font-size: 24rpx;
}
.pin-dan-btn {
  width: 110rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
}
.pin-dan-btn button {
  width: 100%;
  font-size: 24rpx;
  padding: 0;
}
.share-area {
  position: fixed;
  z-index: 99;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.share-area .mask {
  width: 100%;
  height: 60%;
  background: #000 none repeat scroll 0% 0%;
  opacity: 0.4;
}
.share-area .share-info {
  width: 100%;
  height: 40%;
  background: #fff;
}
.share-to {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
}
.share-detail {
  display: flex;
  width: 100%;
  height: calc(100% - 180rpx);
  align-items: center;
}
.share-detail-item {
  width: 50%;
  text-align: center;
  background: inherit;
  padding: 0px;
}
.share-detail button::after {
  border-radius: 0;
  border: none;
}
.share-icon {
  font-size: 50rpx;
}
.share-icon .wechat {
  background:#67C23A;
  color:#fff;
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  border-radius:50%;
}
.share-icon .image {
  background:#E6A23C;
  color:#fff;
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  border-radius:50%;
}
.share-text {
  font-size: 24rpx;
  color: #C0C4CC;
}
.share-close {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-top: 1rpx solid #F4F4F4;
  font-size: 24rpx;
}